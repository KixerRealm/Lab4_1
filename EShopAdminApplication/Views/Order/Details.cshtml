@model EShopAdminApplication.Models.Order

<div class="container">
    <div>
        <p><strong>Order for: </strong>@Model.Owner.UserName</p>
    </div>

    <div class="row">
        @for (int i = 0; i < Model.ProductInOrders.Count(); i++)
        {
            var item = Model.ProductInOrders.ElementAt(i).OrderedProduct;

            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@item.Concert.ConcertImage" alt="Card image cap" style="height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Concert.ConcertName</h5>
                        <p class="card-text">@item.Concert.ConcertDescription</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Concert Rating: @item.Concert.Rating</small>
                            <small class="text-muted">Ticket Rating: @item.Rating</small>
                            <small class="text-muted">Ticket Price: @item.Price</small>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
